@model AssignListViewModel

@{
    ViewData["Title"] = "Manage Asset Assignment";
    AssignGridData current = Model.CurrentRoute;
    GridData routes = Model.CurrentRoute.Clone();
}

<!-- ====== PAGE HEADER ====== -->
<div class="d-flex justify-content-between align-items-center mb-4 pt-2">
    <div>
        <h2 class="fw-bold">Asset Assignment Overview</h2>
        <p class="text-muted">Monitor, filter, and manage all assigned Assets.</p>
    </div>

    <a asp-action="Add" class="btn btn-success shadow-sm">
        <i class="fas fa-plus-circle me-2"></i>Assign Asset
    </a>
</div>


<!-- ====== STAT CARDS ====== -->
<div class="row g-4 mb-4">

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <small class="text-muted">Asset Total</small>
                <div class="h4 fw-bold text-primary">@Model.TotalAsset</div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <small class="text-muted">Available</small>
                <div class="h4 fw-bold text-success">@Model.AvailableCount</div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <small class="text-muted">Assigned</small>
                <div class="h4 fw-bold text-info">@Model.ActiveAssingment</div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <small class="text-muted">Maintenance</small>
                <div class="h4 fw-bold text-warning">@Model.MaintenanceCount</div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <small class="text-muted">Decommissioned</small>
                <div class="h4 fw-bold text-danger">@Model.DecomissionedCount</div>
            </div>
        </div>
    </div>

</div>

<!-- ====== FILTER CARD ====== -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light fw-bold">
        <i class="fas fa-filter me-1"></i> Filters
    </div>

    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">

                <!-- Search -->
                <div class="col-md-6">
                    <label for="SearchQuery" class="form-label">Search</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" id="SearchQuery" name="SearchQuery" class="form-control"
                               value="@current.SearchQuery" placeholder="Search employee, asset tag, etc." />
                    </div>
                </div>

                <!-- Branch -->
                <div class="col-md-3">
                    <label for="BranchId" class="form-label">Branch</label>
                    <select id="BranchId" name="BranchId" class="form-select shadow-sm">
                        <option value="">All</option>
                        @foreach (var branch in Model.Branches)
                        {
                            <option value="@branch.BranchId"
                                    selected="@(branch.BranchId == Model.CurrentRoute.BranchId)">
                                @branch.BranchName
                            </option>
                        }
                    </select>
                </div>

                <!-- Department -->
                <div class="col-md-3">
                    <label for="DepartmentId" class="form-label">Department</label>
                    <select id="DepartmentId" name="DepartmentId" class="form-select shadow-sm">
                        <option value="">All</option>
                        @foreach (var dept in Model.Departments)
                        {
                            <option value="@dept.DepartmentId"
                                    selected="@(dept.DepartmentId == Model.CurrentRoute.DepartmentId)">
                                @dept.DepartmentName
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-12 text-end">
                    <button type="submit" class="btn btn-primary px-4">
                        Apply Filters
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>


<!-- ====== ASSIGNMENT TABLE ====== -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-light fw-bold">
        <i class="fas fa-table me-1"></i> Assigned Assets
    </div>

    <div class="card-body">
        <div class="table-responsive-sm">
            <table class="table table-hover table-bordered align-middle shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th>Asset Tag</th>
                        <th>Employee</th>
                        <th>Branch</th>
                        <th>Department</th>
                        <th>Assigned Date</th>
                        <th>Return Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var assignment in Model.Assign)
                    {
                        <tr>
                            <td>@assignment.Asset.AssetName</td>
                            <td>@assignment.Employee</td>
                            <td>@assignment.Branch?.BranchName</td>
                            <td>@assignment.Department?.DepartmentName</td>
                            <td>@assignment.AssginedDate.ToShortDateString()</td>
                            <td>@(assignment.ReturnDate?.ToShortDateString() ?? "—")</td>

                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                        Actions
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        <li>
                                            <a asp-action="ReturnAsset"
                                               asp-route-id="@assignment.AssingmentId"
                                               class="dropdown-item text-warning">
                                                <i class="fas fa-undo me-1"></i> Return
                                            </a>
                                        </li>

                                        <li><hr class="dropdown-divider" /></li>

                                        <li>
                                            <form asp-action="Select" method="post">
                                                <input type="hidden" name="id" value="@assignment.AssingmentId" />

                                                <button type="submit" name="operation" value="edit" class="dropdown-item text-primary">
                                                    <i class="fas fa-edit me-1"></i> Edit
                                                </button>

                                                <button type="submit" name="operation" value="delete" class="dropdown-item text-danger">
                                                    <i class="fas fa-trash me-1"></i> Delete
                                                </button>
                                            </form>
                                        </li>

                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="mt-3">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                routes.PageNumber = i;
                string active = Nav.Active(i, current.PageNumber);

                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="btn btn-sm btn-outline-primary me-1 mb-2 @active">
                    @i
                </a>
            }
        </div>

    </div>
</div>

@section Scripts {
    <script>
        $('#BranchId').change(function () {
            var branchId = $(this).val();
            $('#DepartmentId').html('<option>Loading...</option>');

            $.get('/AssetAssignment/GetByBranch', { branchId: branchId }, function (data) {
                var options = '<option value="">All</option>';
                $.each(data, function (i, dept) {
                    options += `<option value="${dept.id}">${dept.name}</option>`;
                });
                $('#DepartmentId').html(options);
            });
        });
    </script>
}
