@model AssignListViewModel

@{
    ViewData["Title"] = "Assigned Assets";
    var current = Model.CurrentRoute;
}

<h2>Assigned Assets</h2>
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <!-- Filters -->
        <div class="col-md-3">
            <label for="SearchQuery" class="form-label">Search by Employee</label>
            <input type="text" id="SearchQuery" name="SearchQuery"
                   value="@Model.CurrentRoute.SearchQuery" class="form-control"
                   placeholder="Enter employee name" />
        </div>

        <div class="col-md-2">
            <label for="BranchId" class="form-label">Branch</label>
            <select id="BranchId" name="BranchId" class="form-select">
                <option value="">All</option>
                @foreach (var branch in Model.Branches)
                {
                    var selected = branch.BranchId == Model.CurrentRoute.BranchId ? "selected" : "";
                    @:<option value="@branch.BranchId" @selected>@branch.BranchName</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <label for="DepartmentId" class="form-label">Department</label>
            <select id="DepartmentId" name="DepartmentId" class="form-select">
                <option value="">All</option>
                @foreach (var department in Model.Departments)
                {
                    var selected = department.DepartmentId == Model.CurrentRoute.DepartmentId ? "selected" : "";
                    @:<option value="@department.DepartmentId" @selected>@department.DepartmentName</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <label for="CategoryId" class="form-label">Category</label>
            <select id="CategoryId" name="CategoryId" class="form-select">
                <option value="">All</option>
                @foreach (var category in Model.Categories)
                {
                    var selected = category.CategoryId == Model.CurrentRoute.CategoryId ? "selected" : "";
                    @:<option value="@category.CategoryId" @selected>@category.CategoryName</option>
                }
            </select>
        </div>

        <div class="col-sm-1">
            <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" name="ShowAll" id="ShowAll"
                       value="true" @(Model.CurrentRoute.ShowAll ? "checked" : "") />
                <label class="form-check-label" for="ShowAll">Show All</label>
            </div>
        </div>

        <!-- Buttons -->
        <div class="col-md-2 d-flex justify-content-end gap-2 mt-4">
            <button type="submit" class="btn btn-primary">Apply</button>
            <a asp-action="Add" class="btn btn-outline-success">
                <strong>+ Assign</strong>
            </a>
        </div>
    </div>
</form>



<hr />

@if (Model.Assign.Any())
{
  <table class="table table-bordered table-hover table-sm align-middle">
    <thead class="table-dark text-white">
            <tr>
                <th>Asset</th>
                <th>Category</th>
                <th>Serial</th>
                <th>Assigned To</th>
                <th>Department</th>
                <th>Branch</th>
                <th>Assigned</th>
                <th>Status</th>
                <th>Return</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Assign)
            {
                <tr>
                    <td>@a.Asset?.AssetName</td>
                    <td>@a.Asset?.Category?.CategoryName</td>
                    <td>@a.Asset?.SerialNumber</td>
                    <td>@a.Employee</td>
                    <td>@a.Department?.DepartmentName</td>
                    <td>@a.Branch?.BranchName</td>
                    <td>@a.AssginedDate.ToShortDateString()</td>
                    <td>
                        @if (a.ReturnDate == null)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Returned</span>
                        }
                    </td>
                    <td>
                        @if (a.ReturnDate == null)
                        {
                            <a asp-action="ReturnAsset" asp-route-id="@a.AssingmentId"
                               class="btn btn-sm btn-outline-warning">Return</a>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No assignments match your filters.</p>
}
