@{
    // Safely extract current area, controller, and action with fallbacks
    var current = ViewContext.RouteData.Values["area"]?.ToString() ??
                  ViewContext.RouteData.Values["controller"]?.ToString() ?? "Home";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "Index";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Enterprise Asset Management System for tracking and managing company assets" />
    <title>@ViewData["Title"] - Asset Manager</title>

    <!-- Preload critical assets -->
    <link rel="preload" href="~/css/site.css" as="style" />
    <link rel="preload" href="~/favicon.ico" as="image" />

    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png" />
    <link rel="manifest" href="~/site.webmanifest" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Page-specific CSS -->
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Skip to Content Link -->
    <a class="visually-hidden-focusable skip-link btn btn-primary position-absolute start-0 top-0" href="#main-content">Skip to content</a>

    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-server me-2" aria-hidden="true"></i>
                    <span>Asset Manager</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(current == "Home" ? "active" : "")"
                               asp-action="Index" asp-controller="Home"
                               aria-current="@(current == "Home" ? "page" : null)">
                                <i class="fas fa-home me-1" aria-hidden="true"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>

                        <!-- Assets Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(current == "Asset" || current == "AssetAssignment" || current == "MaintenanceLog" ? "active" : "")"
                               href="#" id="assetsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-laptop me-1" aria-hidden="true"></i>
                                <span>Assets</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="assetsDropdown">
                                <li>
                                    <a class="dropdown-item @(current == "Asset" ? "active" : "")"
                                       asp-action="Index" asp-controller="Asset"
                                       aria-current="@(current == "Asset" ? "page" : null)">
                                        <i class="fas fa-list me-1" aria-hidden="true"></i>
                                        <span>All Assets</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(current == "AssetAssignment" ? "active" : "")"
                                       asp-action="Index" asp-controller="AssetAssignment"
                                       aria-current="@(current == "AssetAssignment" ? "page" : null)">
                                        <i class="fas fa-user-tag me-1" aria-hidden="true"></i>
                                        <span>Assignments</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(current == "MaintenanceLog" ? "active" : "")"
                                       asp-action="Index" asp-controller="MaintenanceLog"
                                       aria-current="@(current == "MaintenanceLog" ? "page" : null)">
                                        <i class="fas fa-tools me-1" aria-hidden="true"></i>
                                        <span>Maintenance</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Management Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(current == "Supplier" || current == "Category" || current == "Branch" || current == "Department" ? "active" : "")"
                               href="#" id="managementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cog me-1" aria-hidden="true"></i>
                                <span>Management</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="managementDropdown">
                                <li>
                                    <a class="dropdown-item @(current == "Supplier" ? "active" : "")"
                                       asp-action="Index" asp-controller="Supplier"
                                       aria-current="@(current == "Supplier" ? "page" : null)">
                                        <i class="fas fa-truck me-1" aria-hidden="true"></i>
                                        <span>Suppliers</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(current == "Category" ? "active" : "")"
                                       asp-action="Index" asp-controller="Category"
                                       aria-current="@(current == "Category" ? "page" : null)">
                                        <i class="fas fa-tags me-1" aria-hidden="true"></i>
                                        <span>Categories</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(current == "Branch" ? "active" : "")"
                                       asp-action="Index" asp-controller="Branch"
                                       aria-current="@(current == "Branch" ? "page" : null)">
                                        <i class="fas fa-code-branch me-1" aria-hidden="true"></i>
                                        <span>Branches</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(current == "Department" ? "active" : "")"
                                       asp-action="Index" asp-controller="Department"
                                       aria-current="@(current == "Department" ? "page" : null)">
                                        <i class="fas fa-building me-1" aria-hidden="true"></i>
                                        <span>Departments</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex me-3" asp-controller="Asset" asp-action="Index" method="get" role="search">
                        <div class="input-group">
                            <input class="form-control form-control-sm" type="search"
                                   placeholder="Search by asset name or ID..." name="searchQuery"
                                   aria-label="Search assets">
                            <button class="btn btn-outline-light btn-sm" type="submit"
                                    aria-label="Search assets">
                                <i class="fas fa-search" aria-hidden="true"></i>
                            </button>
                        </div>
                    </form>

                    @* <partial name="_LoginPartial" /> *@
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main id="main-content" class="flex-grow-1">
        <div class="container-fluid px-4 py-3">
            @if (TempData.ContainsKey("message"))
            {
                var messageType = TempData["messageType"]?.ToString() ?? "success";
                var bgClass = messageType switch
                {
                    "error" => "bg-danger",
                    "warning" => "bg-warning",
                    _ => "bg-success"
                };
                var iconClass = messageType switch
                {
                    "error" => "fa-exclamation-circle",
                    "warning" => "fa-info-circle",
                    _ => "fa-check-circle"
                };
                <div class="position-fixed top-0 end-0 p-3" style="z-index: 9999">
                    <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header @bgClass text-white">
                            <strong class="me-auto">@messageType.ToUpper()</strong>
                            <small class="text-white">Just now</small>
                            <button type="button" class="btn-close btn-close-white"
                                    data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">
                            <i class="fas @iconClass me-2" aria-hidden="true"></i> @Html.Encode(TempData["message"])
                        </div>
                    </div>
                </div>
            }

            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4 py-3 border-bottom">
                <div>
                    <h1 class="h2 mb-0">@ViewData["Title"]</h1>
                    @if (ViewData["Description"] != null)
                    {
                        <p class="text-muted mb-0">@ViewData["Description"]</p>
                    }
                </div>
                <div>
                    @RenderSection("ActionButtons", required: false)
                </div>
            </div>

            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container-fluid px-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="mb-2 mb-md-0">
                    © @DateTime.Now.Year - Asset Manager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
                <div class="text-muted small">
                    <span class="d-none d-md-inline">v@(System.Reflection.Assembly.GetExecutingAssembly().GetName().Version?.ToString() ?? "1.0.0")</span>
                    <span id="pageLoadTime" class="ms-md-2"></span>
                    <span id="currentDateTime" class="ms-2"></span>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>

    <!-- Validation Scripts (Conditional) -->
    @if (action == "Create" || action == "Edit")
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"
                integrity="sha512-rstIgDs0xPgmG6m1Gf0W7oO3Z3tY0P7k7JZsB7QAFzdK5Y2cd0rJe20e7/4vDDq3iBT1K6mvbW8r7y6NjCQjBg=="
                crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"
                integrity="sha512-oN8lLofKaqTlrW4o0W7Unr7O2krm9HKlNBc4GOr+lg6ksN86QeTXLnW1PHa/g13hB9A0T2NB3uHFx+9J3U0u3g=="
                crossorigin="anonymous"></script>
    }

    <!-- Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Page Load Time Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Page load time
            const loadTime = window.performance.timing.domContentLoadedEventEnd - window.performance.timing.navigationStart;
            document.getElementById('pageLoadTime').textContent = `Loaded in ${loadTime}ms`;

            // Current date/time
            const options = {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            const now = new Date().toLocaleString('en-US', options);
            document.getElementById('currentDateTime').textContent = now;

            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    <!-- Page-specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)

    <noscript>
        <div class="alert alert-warning m-3">
            <h4>JavaScript is disabled</h4>
            <p>This application requires JavaScript to function properly. Please enable JavaScript in your browser settings.</p>
        </div>
    </noscript>
</body>
</html>