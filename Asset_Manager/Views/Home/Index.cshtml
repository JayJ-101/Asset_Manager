@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <style>
        .card-icon {
            font-size: 2.5rem;
            opacity: 0.3;
        }
    </style>
}

<div class="row g-4">
    <!-- Total Assets -->
    <div class="col-md-3">
        <div class="card border-start-primary shadow h-100 py-2">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Assets</div>
                    <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalAssets</div>
                </div>
                <i class="fas fa-laptop card-icon text-primary"></i>
            </div>
        </div>
    </div>

    <!-- Assigned Assets -->
    <div class="col-md-3">
        <div class="card border-start-success shadow h-100 py-2">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs fw-bold text-success text-uppercase mb-1">Assigned Assets</div>
                    <div class="h5 mb-0 fw-bold text-gray-800">@Model.AssignedAssets</div>
                </div>
                <i class="fas fa-user-check card-icon text-success"></i>
            </div>
        </div>
    </div>

    <!-- Under Maintenance -->
    <div class="col-md-3">
        <div class="card border-start-warning shadow h-100 py-2">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs fw-bold text-warning text-uppercase mb-1">In Maintenance</div>
                    <div class="h5 mb-0 fw-bold text-gray-800">@Model.UnderMaintenance</div>
                </div>
                <i class="fas fa-tools card-icon text-warning"></i>
            </div>
        </div>
    </div>

    <!-- Pending Returns -->
    <div class="col-md-3">
        <div class="card border-start-danger shadow h-100 py-2">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs fw-bold text-danger text-uppercase mb-1">Pending Returns</div>
                    <div class="h5 mb-0 fw-bold text-gray-800">@Model.PendingReturns</div>
                </div>
                <i class="fas fa-exclamation-circle card-icon text-danger"></i>
            </div>
        </div>
    </div>
</div>
