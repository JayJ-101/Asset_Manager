@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["Description"] = "Overview of your asset management system";
}

@section Styles {
    <style>
        .card-icon {
            font-size: 2.5rem;
            opacity: 0.3;
            transition: all 0.3s ease;
        }

        .stat-card:hover .card-icon {
            opacity: 0.5;
            transform: scale(1.1);
        }

        .asset-status-chart {
            height: 250px;
        }

        .recent-activity-item {
            border-left: 3px solid transparent;
            transition: all 0.2s ease;
        }

            .recent-activity-item:hover {
                background-color: rgba(0, 0, 0, 0.02);
                border-left-color: var(--bs-primary);
            }

        .quick-action-btn {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
        }

            .quick-action-btn:hover {
                background-color: rgba(0, 0, 0, 0.03);
                transform: translateY(-2px);
            }
    </style>
}

<div class="row g-4 mb-4">
    <!-- Summary Stats Cards -->
    <div class="col-md-3">
        <div class="card border-start-primary shadow h-100 py-2 stat-card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Assets</div>
                    <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalAssets.ToString("N0")</div>
                    <div class="text-xs text-muted mt-1">@Model.AssetsAddedThisMonth added this month</div>
                </div>
                <i class="fas fa-laptop card-icon text-primary"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-start-success shadow h-100 py-2 stat-card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs fw-bold text-success text-uppercase mb-1">Assigned Assets</div>
                    <div class="h5 mb-0 fw-bold text-gray-800">@Model.AssignedAssets.ToString("N0")</div>
                    <div class="text-xs text-muted mt-1">@Model.AssignmentRate.ToString("P1") of total</div>
                </div>
                <i class="fas fa-user-check card-icon text-success"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-start-warning shadow h-100 py-2 stat-card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs fw-bold text-warning text-uppercase mb-1">In Maintenance</div>
                    <div class="h5 mb-0 fw-bold text-gray-800">@Model.UnderMaintenance.ToString("N0")</div>
                    <div class="text-xs text-muted mt-1">@Model.MaintenanceCompletedToday completed today</div>
                </div>
                <i class="fas fa-tools card-icon text-warning"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-start-danger shadow h-100 py-2 stat-card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs fw-bold text-danger text-uppercase mb-1">Pending Returns</div>
                    <div class="h5 mb-0 fw-bold text-gray-800">@Model.PendingReturns.ToString("N0")</div>
                    <div class="text-xs text-muted mt-1">@Model.OverdueReturns overdue</div>
                </div>
                <i class="fas fa-exclamation-circle card-icon text-danger"></i>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Asset Status Chart -->
    <div class="col-lg-8">
        <div class="card shadow h-100">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">Asset Status Overview</h6>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                            id="chartPeriodDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Last 30 Days
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="chartPeriodDropdown">
                        <li><a class="dropdown-item" href="#">Last 7 Days</a></li>
                        <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                        <li><a class="dropdown-item" href="#">Last 90 Days</a></li>
                        <li><a class="dropdown-item" href="#">This Year</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="asset-status-chart">
                    <!-- Chart will be rendered here by JavaScript -->
                    <canvas id="assetStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="card shadow h-100">
            <div class="card-header py-3">
                <h6 class="m-0 fw-bold text-primary">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-6">
                        <a asp-controller="Asset" asp-action="Add" class="quick-action-btn text-decoration-none">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle mb-2">
                                <i class="fas fa-plus text-primary fs-4"></i>
                            </div>
                            <span class="text-dark fw-semibold">Add Asset</span>
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-controller="AssetAssignment" asp-action="Add" class="quick-action-btn text-decoration-none">
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle mb-2">
                                <i class="fas fa-user-tag text-success fs-4"></i>
                            </div>
                            <span class="text-dark fw-semibold">Assign Asset</span>
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-controller="MaintenanceLog" asp-action="Add" class="quick-action-btn text-decoration-none">
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle mb-2">
                                <i class="fas fa-tools text-warning fs-4"></i>
                            </div>
                            <span class="text-dark fw-semibold">Log Maintenance</span>
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-controller="AssetAssignment" asp-action="Index" class="quick-action-btn text-decoration-none">
                            <div class="bg-info bg-opacity-10 p-3 rounded-circle mb-2">
                                <i class="fas fa-exchange-alt text-info fs-4"></i>
                            </div>
                            <span class="text-dark fw-semibold">Process Return</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Recent Activity -->
    <div class="col-lg-6">
        <div class="card shadow h-100">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">Recent Activity</h6>
                <a asp-controller="ActivityLog" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var activity in Model.RecentActivities)
                    {
                        <div class="list-group-item recent-activity-item">
                            <div class="d-flex justify-content-between">
                                <div class="fw-semibold">@activity.Action</div>
                                <small class="text-muted">@activity.Timestamp.ToString("g")</small>
                            </div>
                            <div class="text-muted small">@activity.Description</div>
                            <div class="mt-1">
                                <span class="badge bg-@activity.StatusColor">@activity.AssetName</span>
                                @if (!string.IsNullOrEmpty(activity.User))
                                {
                                    <span class="badge bg-light text-dark ms-1">@activity.User</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Maintenance -->
    <div class="col-lg-6">
        <div class="card shadow h-100">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">Upcoming Maintenance</h6>
                <a asp-controller="MaintenanceLog" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Asset</th>
                                <th>Type</th>
                                <th>Due Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var maintenance in Model.UpcomingMaintenance)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Asset" asp-action="Details" asp-route-id="@maintenance.AssetId"
                                           class="text-decoration-none">@maintenance.AssetName</a>
                                    </td>
                   
                                    <td>
                                        @if (maintenance.IsOverdue)
                                        {
                                            <span class="text-danger">@maintenance.DueDate.ToString("d")</span>
                                        }
                                        else if (maintenance.DueDate.Date == DateTime.Today)
                                        {
                                            <span class="text-warning">Today</span>
                                        }
                                        else
                                        {
                                            @maintenance.DueDate.ToString("d")
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@maintenance.Status">@maintenance.Status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Asset Status Chart
            const ctx = document.getElementById('assetStatusChart').getContext('2d');
            const assetStatusChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Available', 'Assigned', 'Maintenance', 'Retired'],
                    datasets: [{
                        label: 'Asset Count',
                        data: [
                            @Model.AvailableAssets,
                            @Model.AssignedAssets,
                            @Model.UnderMaintenance,
                            @Model.RetiredAssets
                        ],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(255, 99, 132, 0.6)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(255, 99, 132, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}