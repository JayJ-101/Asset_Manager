@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "_AuthLayout";
}

<div class="card shadow border-0">
    <div class="card-body p-4">
        <h3 class="text-center mb-4">Register</h3>
       <form method="post" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-bold"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div><div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
           
            <!-- Buttons -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
            <!-- Login -->
            <div class="text-center mt-3">
                <small>
                    Already registered?
                    <a asp-action="Register" class="text-decoration-none fw-bold"> log in</a>
                </small>
            </div>
        </form>
    </div>
</div>

