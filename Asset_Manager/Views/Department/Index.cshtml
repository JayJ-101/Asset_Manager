@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<a asp-action="Add" class="btn btn-primary mb-2">Add Department</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Branch</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.DepartmentName</td>
                <td>@dept.Branch.BranchName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@dept.DepartmentId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@dept.DepartmentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
