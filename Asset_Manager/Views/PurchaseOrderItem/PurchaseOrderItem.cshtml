@model PurchaseOrderItemViewModel

@{
    var action = ViewContext.RouteData.Values["action"]!.ToString()!.Capitalize();
    ViewData["Title"] = $" | {action} Purchase Order Item";
}

<h1>@action Purchase Order Item</h1>

<form asp-action="@action" asp-area="" method="post">
    <input type="hidden" asp-for="PurchaseOrderItem.OrderITemId" />
    <input type="hidden" name="Operation" value="@action" />

    @if (action.EqualsNoCase("delete"))
    {
        var selectedCategory = Model.Categories.FirstOrDefault(c => c.CategoryId == Model.PurchaseOrderItem.CategoryId)?.CategoryName ?? "N/A";

        <h5>Are you sure you want to delete this Purchase Order Item?</h5>
        <p><strong>Category:</strong> @selectedCategory</p>
        <p><strong>Quantity:</strong> @Model.PurchaseOrderItem.Quantity</p>
        <p><strong>Unit Price:</strong> @Model.PurchaseOrderItem.UnitPrice.ToString("C")</p>
    }

    else
    {
        <div class="row mb-2">
            <label class="col-form-label col-md-2">Purchase Order:</label>
            <div class="col-md-4">
                <select asp-for="PurchaseOrderItem.PurchaseOrderId" class="form-select"
                        asp-items='@(new SelectList(Model.PurchaseOrders, "PurchaseOrderId", "OrderNumber", Model.PurchaseOrderItem.PurchaseOrderId))'>
                    <option value="">-- Select Purchase Order --</option>
                </select>

            </div>
            <div class="col">
                <span asp-validation-for="PurchaseOrderItem.PurchaseOrderId" class="text-danger"></span>
            </div>
        </div>


        <div class="row mb-2">
            <label class="col-form-label col-md-2">Category:</label>
            <div class="col-md-4">
                <select asp-for="PurchaseOrderItem.CategoryId" class="form-select"
                        asp-items='@new SelectList(Model.Categories, "CategoryId", "CategoryName", Model.PurchaseOrderItem.CategoryId)'>
                    <option value="">-- Select Category --</option>
                </select>
            </div>
            <div class="col">
                <span asp-validation-for="PurchaseOrderItem.CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <label class="col-form-label col-md-2">Quantity:</label>
            <div class="col-md-4">
                <input type="number" asp-for="PurchaseOrderItem.Quantity" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="PurchaseOrderItem.Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <label class="col-form-label col-md-2">Unit Price:</label>
            <div class="col-md-4">
                <input type="number" step="0.01" asp-for="PurchaseOrderItem.UnitPrice" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="PurchaseOrderItem.UnitPrice" class="text-danger"></span>
            </div>
        </div>
    }

    <div class="row">
        <div class="@(action.EqualsNoCase("delete") ? "mt-2" : "offset-md-2")">
            <button type="submit" class="btn btn-primary">@action</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
