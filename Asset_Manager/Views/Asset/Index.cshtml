@model AssetListViewModel
@{
    // ViewData["Title"] = "Manage Assets";
    var current = Model.CurrentRoute;
    var routes = current.Clone();
}

<div class="container-fluid px-4">

   <!-- ====== PAGE HEADER ====== -->
    <div class="d-flex justify-content-between align-items-center mb-4 pt-2">
        <div>
            <h2 class="fw-bold">Asset Management</h2>
            <p class="text-muted">Monitor, filter, and manage all assets in your organization.</p>
        </div>

        <a asp-action="Add" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle me-2"></i>Add Asset
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card bg-primary text-white shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small text-uppercase fw-bold opacity-75">Total Assets</div>
                        <div class="fs-4 fw-bold">@Model.TotalAssets</div>
                    </div>
                    <i class="fas fa-boxes fa-2x opacity-50"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card bg-success text-white shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small text-uppercase fw-bold opacity-75">Available</div>
                        <div class="fs-4 fw-bold">@Model.AvailableCount</div>
                    </div>
                    <i class="fas fa-check-circle fa-2x opacity-50"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card bg-warning text-dark shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small text-uppercase fw-bold opacity-75">Maintenance</div>
                        <div class="fs-4 fw-bold">@Model.MaintenanceCount</div>
                    </div>
                    <i class="fas fa-tools fa-2x opacity-50"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card bg-danger text-white shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small text-uppercase fw-bold opacity-75">Decommissioned</div>
                        <div class="fs-4 fw-bold">@Model.DecomissionedCount</div>
                    </div>
                    <i class="fas fa-ban fa-2x opacity-50"></i>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Filters Card -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-light fw-bold">
        <i class="fas fa-filter me-2"></i>Filters
    </div>

    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-4 align-items-end">

                <div class="col-md-6">
                    <label class="form-label">Search</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="SearchQuery" class="form-control"
                               value="@current.SearchQuery"
                               placeholder="Search by name, model or serial">
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Category</label>
                    <select class="form-select" name="CategoryId">
                        <option value="">All</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.CategoryId"
                                    selected="@(category.CategoryId == current.CategoryId ? "selected" : null)">
                                @category.CategoryName
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" name="Status">
                        <option value="">All</option>
                        @foreach (var status in Model.Statuses)
                        {
                            <option value="@status" selected="@(status == current.Status ? "selected" : null)">@status</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm">
                        Apply
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Asset Table Compact -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-light fw-bold py-2">
        <i class="fas fa-table me-2"></i>Asset Inventory
    </div>

    <div class="card-body p-2">
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle table-sm mb-0" style="font-size: 0.875rem;">
                <thead class="table-dark">
                    <tr>
                        @* Manufacturer *@
                        <th class="py-1">
                            @{
                                routes.SetSortAndDirection(nameof(Asset.Manufacturer), current);
                            }
                            <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">
                                Manufacturer
                            </a>
                        </th>

                        @* Model *@
                        <th class="py-1">
                            @{
                                routes.SetSortAndDirection(nameof(Asset.Model), current);
                            }
                            <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">
                                Model
                            </a>
                        </th>

                        @* Asset Tag *@
                        <th class="py-1">
                            @{
                                routes.SetSortAndDirection(nameof(Asset.AssetName), current);
                            }
                            <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">
                                Asset Tag
                            </a>
                        </th>

                        @* Serial *@
                        <th class="py-1">
                            @{
                                routes.SetSortAndDirection(nameof(Asset.SerialNumber), current);
                            }
                            <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">
                                Serial Number
                            </a>
                        </th>

                        <th class="py-1">Supplier</th>
                        <th class="py-1">Category</th>

                        <th class="py-1">
                            @{
                                routes.SetSortAndDirection(nameof(Asset.Status), current);
                            }
                            <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">
                                Status
                            </a>
                        </th>

                        <th class="py-1">Purchase Date</th>
                        <th class="py-1">Warranty</th>
                        <th class="text-center py-1">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var asset in Model.Assets)
                    {
                        <tr>
                            <td class="py-1">@asset.Manufacturer</td>
                            <td class="py-1">@asset.Model</td>
                            <td class="py-1">@asset.AssetName</td>
                            <td class="py-1">@asset.SerialNumber</td>
                            <td class="py-1">@asset.Supplier?.SupplierName</td>
                            <td class="py-1">@asset.Category?.CategoryName</td>

                            <td class="py-1">
                                @if (asset.Status == "Available")
                                {
                                    <span class="badge bg-success" style="font-size: 0.75rem;">@asset.Status</span>
                                }
                                else if (asset.Status == "Under Maintenance")
                                {
                                    <span class="badge bg-warning text-dark" style="font-size: 0.75rem;">@asset.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary" style="font-size: 0.75rem;">@asset.Status</span>
                                }
                            </td>

                            <td class="py-1">@asset.PurchaseDate.ToShortDateString()</td>
                            <td class="py-1">@asset.WarrantyExpiryDate.ToShortDateString()</td>

                            <td class="text-center py-1">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle py-0" data-bs-toggle="dropdown" style="font-size: 0.75rem;">
                                        Actions
                                    </button>
                                    <ul class="dropdown-menu" style="font-size: 0.875rem;">
                                        <li><a class="dropdown-item py-1" asp-controller="AssetAssignment" asp-action="Add" asp-route-assetId="@asset.AssetId">Assign</a></li>
                                        <li><a class="dropdown-item py-1" asp-action="Details" asp-route-id="@asset.AssetId">Details</a></li>
                                        <li><a class="dropdown-item py-1" asp-action="Edit" asp-route-id="@asset.AssetId">Edit</a></li>
                                        <li><a class="dropdown-item text-danger py-1" asp-action="Delete" asp-route-id="@asset.AssetId">Delete</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="d-flex gap-2 mt-3">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    routes.PageNumber = i;
                    var active = Nav.Active(i, current.PageNumber);

                    <a asp-action="Index"
                       asp-all-route-data="@routes.ToDictionary()"
                       class="btn btn-outline-primary btn-sm @active">
                        @i
                    </a>
                }
            </div>

        </div>
    </div>
</div>
