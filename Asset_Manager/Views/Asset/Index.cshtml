@model AssetListViewModel
@{
    ViewData["Title"] = "Manage Asset";

    AssetGridData current = Model.CurrentRoute;
    GridData routes = Model.CurrentRoute.Clone();
}

<h5 class="mt-1"><a asp-action="Add"> Add Asset</a></h5>

<!-- Filter Form -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <!-- Search Bar -->
        <div class="col-md-3">
            <label for="SearchQuery" class="form-label">Search Asset</label>
            <input type="text" id="SearchQuery" name="SearchQuery"
                   value="@Model.CurrentRoute.SearchQuery" class="form-control"
                   placeholder="Enter supplier name or contact">
        </div>

        <!-- Category Dropdown -->
        <div class="col-md-2">
            <label for="CategoryId" class="form-label">Category</label>
            <select id="CategoryId" name="CategoryId" class="form-select">
                <option value="">All</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId" selected="@(category.CategoryId == Model.CurrentRoute.CategoryId)">
                        @category.CategoryName
                    </option>
                }
            </select>
        </div>


        <!-- Status Dropdown -->
        <div class="col-md-2">
            <label for="Status" class="form-label">Status</label>
            <select id="Status" name="Status" class="form-select">
                <option value="">All</option>
                @foreach (var status in Model.Statuses)
                {
                    <option value="@status" selected="@(status == Model.CurrentRoute.Status)">
                        @status
                    </option>
                }
            </select>
        </div>

        <!-- Submit Button -->
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary mt-2">Apply</button>
        </div>
    </div>
</form>

<!-- Asset Table -->
<table class="table table-bordered table-striped table-sm">
    <thead class="table-dark text-white">
        <tr>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(Asset.Manufacturer), current);
                }
                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="text-white text-decoration-none">Manufacturer</a>
            </th>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(Asset.Model), current);
                }
                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="text-white text-decoration-none">Model</a>
            </th>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(Asset.AssetName), current);
                }
                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="text-white text-decoration-none">Asset Name</a>
            </th>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(Asset.SerialNumber), current);
                }
                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="text-white text-decoration-none">Serial Number</a>
            </th>

            <th>
                @{
                    routes.SetSortAndDirection(nameof(Asset.SupplierId), current);
                }
                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="text-white text-decoration-none">Supplier</a>
            </th>

            <th>
                @{
                    routes.SetSortAndDirection(nameof(Asset.CategoryId), current);
                }
                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="text-white text-decoration-none">Category</a>
            </th>
            
           
            <th>
                @{
                    routes.SetSortAndDirection(nameof(Asset.Status), current);
                }
                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="text-white text-decoration-none">Status</a>
            </th>
            
            <th>
                @{
                    routes.SetSortAndDirection(nameof(Asset.WarrantyExpiryDate), current);
                }
                <a asp-action="Index"
                   asp-all-route-data="@routes.ToDictionary()"
                   class="text-white text-decoration-none">Warranty Date</a>
            </th>
            <th>
f
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (Asset asset in Model.Assets)
        {
            <tr>
                <td>@asset.Manufacturer</td>
                <td>@asset.Model</td>
                <td>@asset.AssetName</td>
                <td>@asset.SerialNumber</td>
                <td>@asset.Supplier.SupplierName</td>
                <td>@asset.Category?.CategoryName</td>
                <td>@asset.Status</td>
                <td>@asset.WarrantyExpiryDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="AssetAssignment" asp-action="Add" 
                        asp-route-assetId="@asset.AssetId"
                        class="btn btn-sm btn-warning">Assign</a>
                    <a asp-action="Details" asp-route-id="@asset.AssetId" class="btn btn-sm btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@asset.AssetId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@asset.AssetId" class="btn btn-sm btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paging Links -->
@{
    routes = current.Clone();
    for (int i = 1; i <= Model.TotalPages; i++)
    {
        routes.PageNumber = i;
        string active = @Nav.Active(i, current.PageNumber);
        <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()"
           class="btn btn-outline-primary mb-2 @active">@i</a>
    }
}