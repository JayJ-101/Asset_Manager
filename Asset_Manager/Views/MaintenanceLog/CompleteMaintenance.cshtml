@model Asset_Manager.Models.MaintenanceLog

@{
    ViewData["Title"] = "Complete Maintenance";
}



    <form asp-action="CompleteMaintenanceConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.MaintenanceId" />
        <div class="container mt-4">
            <h2>Complete Maintenance</h2>
            <p class="text-muted">Please confirm the maintenance completion for this asset.</p>

            <div class="card mb-4">
                <div class="card-body">
                    <p><strong>Asset:</strong> @Model.Asset?.AssetName</p>
                    <p><strong>Technician:</strong> @Model.Tecnician</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Logged Date:</strong> @Model.LoggedDate.ToString("MMM dd, yyyy")</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                </div>
             </div>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check-circle"></i> Confirm Completion
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
       
    </form>

