@model MaintenanceLogListVM

@{
    ViewData["Title"] = "Maintenance Logs";
    var current = Model.CurrentRoute;
    var routes = current.Clone();
}

@* <h2 class="mb-4">Maintenance Logs</h2> *@

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Maintenance Logs</h2>
    <a asp-action="Add" class="btn btn-outline-success">
        <i class="bi bi-plus-lg"></i> + Log Maintenance
    </a>
</div>


<!-- Filter Form -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-3">
            <label for="SearchQuery" class="form-label">Search by Asset Name</label>
            <input type="text" id="SearchQuery" name="SearchQuery" class="form-control"
                   value="@current.SearchQuery" placeholder="Enter asset name..." />
        </div>

        <div class="col-md-2">
            <label for="Status" class="form-label">Status</label>
            <select id="Status" name="Status" class="form-select">
                <option value="">All</option>
                @foreach (var status in Model.Statuses)
                {
                    var selected = status == current.Status ? "selected" : "";
                    @:<option value="@status" @selected>@status</option>
                }
            </select>
        </div>

        <div class="col-md-3 text-end">
            <button type="submit" class="btn btn-primary">Apply Filters</button>
        </div>

       @*  <div class="col-md-4 text-end">
            <a asp-action="Add" class="btn btn-success">+ Log Maintenance</a>
        </div> *@
    </div>
</form>

<!-- Table -->
<table class="table table-bordered table-striped table-hover table-sm">
    <thead class="table-dark text-white">
        <tr>
            <th>
                @{ routes.SetSortAndDirection(nameof(MaintenanceLog.AssetId), current); }
                <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">
                    Asset
                </a>
            </th>
            <th>
                Technician
            </th>
            <th>
                Description
            </th>
            <th>
                Logged
            </th>
            <th>
                Completion
            </th>
            <th>
                Status
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var log in Model.MaintenanceLogs)
        {
            <tr>
                <td>@log.Asset?.AssetName</td>
                <td>@log.Tecnician</td>
                <td>@log.Description</td>
                <td>@log.LoggedDate.ToShortDateString()</td>
                <td>@(log.CompletionDate?.ToShortDateString() ?? "—")</td>
                <td>
                    @if (log.Status == "Completed")
                    {
                        <span class="badge bg-success">@log.Status</span>
                    }
                    else if (log.Status == "In Progress")
                    {
                        <span class="badge bg-warning text-dark">@log.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@log.Status</span>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@log.MaintenanceId" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@log.MaintenanceId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paging -->
<div>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        routes.PageNumber = i;
        string active = Nav.Active(i, current.PageNumber);
        <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()"
           class="btn btn-outline-primary mb-2 @active">@i</a>
    }
</div>
