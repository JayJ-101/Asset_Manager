@model MaintenanceLogListVM

@{
    ViewData["Title"] = "Maintenance Log";
    var current = Model.CurrentRoute;
    var routes = current.Clone();
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"></h2>
        <a asp-action="Add" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Log Maintenance
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Total assets</div>
                            <div class="h5 mb-0">@Model.TotalAssets</div>
                        </div>
                        <i class="fas fa-clipboard-list fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Pending</div>
                            <div class="h5 mb-0">@Model.Pending</div>
                        </div>
                        <i class="fas fa-clock fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Completed</div>
                            <div class="h5 mb-0">@Model.CompletedCount</div>
                        </div>
                        <i class="fas fa-check-circle fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-dark mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-xs font-weight-bold text-uppercase mb-1">In Progress</div>
                            <div class="h5 mb-0">@Model.ProgressCount</div>
                        </div>
                        <i class="fas fa-tools fa-2x text-dark-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter me-1"></i>
            Filters
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <label for="SearchQuery" class="form-label">Search</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" id="SearchQuery" name="SearchQuery" class="form-control"
                                   value="@current.SearchQuery" placeholder="Search by asset name..." />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label for="Status" class="form-label">Status</label>
                        <select id="Status" name="Status" class="form-select">
                            <option value="">All Statuses</option>
                            @foreach (var status in Model.Statuses)
                            {
                                var selected = status == current.Status ? "selected" : "";
                                <option value="@status" @@selected>@status</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter me-1"></i> Apply Filters
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Maintenance Logs
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                @{ routes.SetSortAndDirection(nameof(MaintenanceLog.AssetId), current); }
                                <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">
                                    <i class="fas fa-laptop me-1"></i> Asset
                                </a>
                            </th>
                            <th><i class="fas fa-user me-1"></i> Technician</th>
                            <th><i class="fas fa-align-left me-1"></i> Description</th>
                            <th><i class="fas fa-calendar-plus me-1"></i> Logged</th>
                            <th><i class="fas fa-calendar-check me-1"></i> Completion</th>
                            <th><i class="fas fa-status me-1"></i> Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.MaintenanceLogs)
                        {
                            <tr>
                                <td class="fw-bold">@log.Asset?.AssetName</td>
                                <td>@log.Tecnician</td>
                                <td class="text-truncate" style="max-width: 200px;" title="@log.Description">
                                    @log.Description
                                </td>
                                <td>@log.LoggedDate.ToString("MMM dd, yyyy")</td>
                                <td>@(log.CompletionDate?.ToString("MMM dd, yyyy") ?? "—")</td>
                                <td>
                                    @if (log.Status == "Completed")
                                    {
                                        <span class="badge bg-success rounded-pill p-2">
                                            <i class="fas fa-check-circle me-1"></i> @log.Status
                                        </span>
                                    }
                                    else if (log.Status == "In Progress")
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill p-2">
                                            <i class="fas fa-spinner me-1"></i> @log.Status
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill p-2">
                                            <i class="fas fa-clock me-1"></i> @log.Status
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@log.MaintenanceId" 
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@log.MaintenanceId" 
                                           class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        @if (log.Status != "Completed")
                                        {
                                            <form asp-action="Complete" asp-route-id="@log.MaintenanceId" method="post" class="d-inline">
                                                <a asp-action="CompleteMaintenance" asp-route-id="@log.MaintenanceId"
                                                   class="btn btn-outline-success" title="Complete">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            routes.PageNumber = i;
                            <li class="page-item @(i == current.PageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-all-route-data="@routes.ToDictionary()">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
