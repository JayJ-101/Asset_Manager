@model Branch

@{
    // This view is used for Add, Edit, and Delete actions.
    var action = ViewContext.RouteData.Values["action"]!.ToString()!.Capitalize();
    ViewData["Title"] = $" | {action} Branch";
}

<h1>@action Branch</h1>

<form asp-action="@action" asp-area="" method="post">

    @*Category ID needed by CRUD operations*@
    <input type="hidden" asp-for="BranchId" />

    @*operation field needed by remote validation*@
    <input type="hidden" name="Operation" value="@action" />

    @if (action.EqualsNoCase("delete"))
    {
        <h5>@Model.BranchName</h5>
        <input type="hidden" asp-for="BranchName" />
    }
    else
    {

        <div class="row mb-2">
            <label asp-for="BranchName" class="col-form-label col-md-2">Name:</label>
            <div class="col-md-4">
                <input asp-for="BranchName" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="BranchName" class="text-danger"></span>
            </div>
        </div>
    }

    <div class="row">
        <div class="@(action.EqualsNoCase("delete") ? "mt-2" : "offset-md-2")">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
