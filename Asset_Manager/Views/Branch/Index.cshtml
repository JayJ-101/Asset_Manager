@model IEnumerable<Branch>

@{
    ViewData["Title"] = " | Manage Branches";
}

<h1 class="mb-2">Manage Branches</h1>

<ul class="list-group">
    <li class="list-group-item">
        <h5 class="mt-1"><a asp-action="Add">Add a Branch</a></h5>
    </li>
    <li class="list-group-item">
        <form asp-action="Select" method="post">
            <div class="row">
                <h5 class="col-auto mt-1">Select a Branch</h5>
                <div class="col-auto">
                    <select name="id" class="form-select"
                            asp-items='@new SelectList(Model, "BranchId", "BranchName")'></select>
                </div>
                <div class="col-auto">
                    <input type="submit" name="Operation" value="Edit"
                           class="btn btn-primary" />
                </div>
                <div class="col-auto">
                    <input type="submit" name="Operation" value="Delete"
                           class="btn btn-danger" />
                </div>
            </div>
        </form>
    </li>
</ul>
