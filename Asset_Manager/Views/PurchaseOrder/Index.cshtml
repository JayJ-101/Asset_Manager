@model PurchaseOrderListViewModel
@{
    ViewData["Title"] = "Manage Purchase Orders";

    PurchaseOrderGridData current = Model.CurrentRoute;
    GridData routes = Model.CurrentRoute.Clone();
}

<h5 class="mt-1"><a asp-action="Add"> Add Purchase Order</a></h5>

<!-- Filter Form -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <!-- Search Bar -->
        <div class="col-md-3">
            <label for="SearchQuery" class="form-label">Search Order</label>
            <input type="text" id="SearchQuery" name="SearchQuery"
                   value="@Model.CurrentRoute.SearchQuery" class="form-control"
                   placeholder="Enter supplier name or order number">
        </div>

        <!-- Supplier Dropdown -->
        <div class="col-md-3">
            <label for="SupplierId" class="form-label">Supplier</label>
            <select id="SupplierId" name="SupplierId" class="form-select">
                <option value="">All</option>
                @foreach (var supplier in Model.Suppliers)
                {
                    <option value="@supplier.SupplierId" selected="@(supplier.SupplierId == Model.CurrentRoute.SupplierId)">
                        @supplier.SupplierName
                    </option>
                }
            </select>
        </div>

        <!-- Status Dropdown -->
        <div class="col-md-2">
            <label for="Status" class="form-label">Status</label>
            <select id="Status" name="Status" class="form-select">
                <option value="">All</option>
                @foreach (var status in Model.Statuses)
                {
                    <option value="@status" selected="@(status == Model.CurrentRoute.Status)">
                        @status
                    </option>
                }
            </select>
        </div>

        <!-- Submit Button -->
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary mt-2">Apply</button>
        </div>
    </div>
</form>

<!-- Purchase Order Table -->
<table class="table table-bordered table-striped table-sm">
    <thead class="table-dark text-white">
        <tr>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(PurchaseOrder.OrderNumber), current);
                }
                <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">Order Number</a>
            </th>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(PurchaseOrder.SupplierId), current);
                }
                <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">Supplier</a>
            </th>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(PurchaseOrder.PurchaseDate), current);
                }
                <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">Order Date</a>
            </th>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(PurchaseOrder.ReceivedDate), current);
                }
                <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">Received Date</a>
            </th>
            <th>
                @{
                    routes.SetSortAndDirection(nameof(PurchaseOrder.Status), current);
                }
                <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()" class="text-white text-decoration-none">Status</a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PurchaseOrder order in Model.PurchaseOrders)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.Supplier?.SupplierName</td>
                <td>@order.PurchaseDate.ToShortDateString()</td>
                <td>@order.ReceivedDate</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.PurchaseOrderId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.PurchaseOrderId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paging Links -->
@{
    routes = current.Clone();
    for (int i = 1; i <= Model.TotalPages; i++)
    {
        routes.PageNumber = i;
        string active = @Nav.Active(i, current.PageNumber);
        <a asp-action="Index" asp-all-route-data="@routes.ToDictionary()"
           class="btn btn-outline-primary mb-2 @active">@i</a>
    }
}
