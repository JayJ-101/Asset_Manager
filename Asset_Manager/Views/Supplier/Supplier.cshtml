@model Supplier

@{
    // This view is used for Add, Edit, and Delete actions.
    var action = ViewContext.RouteData.Values["action"]!.ToString()!.Capitalize();
    ViewData["Title"] = $" | {action} Supplier";
}

<h1>@action Supplier</h1>

<form asp-action="@action" asp-area="" method="post">

    @* Supplier ID needed by CRUD operations *@
    <input type="hidden" asp-for="SupplierId" />

    @* Operation field needed by remote validation *@
    <input type="hidden" name="Operation" value="@action" />

    @if (action.EqualsNoCase("delete"))
    {
        <h5>@Model.SupplierName</h5>
        <input type="hidden" asp-for="SupplierName" />
    }
    else
    {
        <div class="row mb-2">
            <label asp-for="SupplierName" class="col-form-label col-md-2">Supplier Name:</label>
            <div class="col-md-4">
                <input asp-for="SupplierName" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <label asp-for="ContactPerson" class="col-form-label col-md-2">Contact Person:</label>
            <div class="col-md-4">
                <input asp-for="ContactPerson" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="ContactPerson" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <label asp-for="PhoneNumber" class="col-form-label col-md-2">Phone Number:</label>
            <div class="col-md-4">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <label asp-for="Email" class="col-form-label col-md-2">Email Address:</label>
            <div class="col-md-4">
                <input asp-for="Email" class="form-control" type="email" />
            </div>
            <div class="col">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <label asp-for="Address" class="col-form-label col-md-2">Address:</label>
            <div class="col-md-4">
                <textarea asp-for="Address" class="form-control"></textarea>
            </div>
            <div class="col">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
    }

    <div class="row">
        <div class="@(action.EqualsNoCase("delete") ? "mt-2" : "offset-md-2")">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
